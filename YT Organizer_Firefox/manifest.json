{
  "manifest_version": 2,
  "name": "YouTube Organizer",
  "version": "2.0.0",
  "description": "Organize YouTube creators into categories and view latest videos via RSS.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "https://www.youtube.com/*",
    "https://*.youtube.com/*"
  ],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "YT Organizer",
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
    }
  },
  "icons": {
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  },
  "options_ui": {
    "page": "src/library.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "your-categorizer-id@example.com",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["src/contentScript.js"],
      "css": ["src/contentStyles.css"],
      "run_at": "document_idle"
    }
  ]
}
